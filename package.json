{
  "name": "wolf",
  "displayName": "Wolf",
  "description": "Python live scratchpad",
  "version": "0.4.3",
  "publisher": "traBpUkciP",
  "license": "Apache-2.0",
  "engines": {
    "vscode": "^1.51.0"
  },
  "categories": [
    "Debuggers",
    "Other"
  ],
  "activationEvents": [
    "onCommand:wolf.barkAtCurrentFileLive",
    "onCommand:wolf.barkAtCurrentFile",
    "onCommand:wolf.touchBarStart"
  ],
  "main": "./dist/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Wolf configuration",
      "properties": {
        "wolf.pawPrintsInGutter": {
          "type": "boolean",
          "default": true,
          "description": "Use Paw Print style icons in the gutter. ie: To the left of the editor, next to the line numbers."
        },
        "wolf.updateFrequency": {
          "type": "number",
          "default": 500,
          "description": "Set the minimum time between Wolf live updates in milliseconds. A higher number means a longer time between updates. (Valid range: 100 - 1000)"
        },
        "wolf.maxLineLength": {
          "type": "number",
          "default": 100,
          "description": "The maximum length of line decorations. Lines longer than this are truncated (ex: 97, 98, 99, ... )"
        },
        "wolf.updateOnSaveOnly": {
          "type": "boolean",
          "default": true,
          "description": "Only updates when the file is saved instead of every edit."
        },
        "wolf.printLoggingEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Display Wolf console output."
        },
        "wolf.logErrors": {
          "type": "boolean",
          "default": false,
          "description": "Display all errors in the console output."
        },
        "wolf.pythonPath": {
          "type": "string",
          "description": "A different path to python - MUST be version 3.6 or greater"
        }
      }
    },
    "commands": [
      {
        "command": "wolf.barkAtCurrentFileLive",
        "category": "wolf",
        "title": "(Live Editing Mode) Set the Wolf on the current file.",
        "icon": {
          "light": "./media/wolf-dark-blue.png",
          "dark": "./media/wolf-dark-blue.png"
        }
      },
      {
        "command": "wolf.barkAtCurrentFile",
        "category": "wolf",
        "title": "Set the Wolf on the current file.",
        "icon": {
          "light": "./media/wolf-dark-blue.png",
          "dark": "./media/wolf-dark-blue.png"
        }
      },
      {
        "command": "wolf.stopBarking",
        "category": "wolf",
        "title": "Stops running Wolf session.",
        "icon": {
          "light": "./media/wolf-red.png",
          "dark": "./media/wolf-red.png"
        }
      },
      {
        "command": "wolf.touchBarStart",
        "title": "Set the Wolf on the current file.",
        "icon": {
          "light": "./media/wolf-dark-blue-border.png",
          "dark": "./media/wolf-dark-blue-border.png"
        }
      },
      {
        "command": "wolf.touchBarStop",
        "title": "Stops running Wolf session.",
        "icon": {
          "light": "./media/wolf-red-border.png",
          "dark": "./media/wolf-red-border.png"
        }
      }
    ],
    "keybindings": [
      {
        "command": "wolf.barkAtCurrentFileLive",
        "key": "ctrl+shift+0",
        "mac": "cmd+shift+0",
        "when": "!inWolfContext && !inQuickOpen && !terminalFocus && editorLangId == python"
      },
      {
        "command": "wolf.barkAtCurrentFile",
        "key": "ctrl+shift+9",
        "mac": "cmd+shift+9",
        "when": "!inWolfContext && !inQuickOpen && !terminalFocus && editorLangId == python"
      },
      {
        "command": "wolf.stopBarking",
        "key": "ctrl+shift+9",
        "mac": "cmd+shift+9",
        "when": "inWolfContext && !inQuickOpen && !terminalFocus"
      },
      {
        "command": "wolf.stopBarking",
        "key": "ctrl+shift+0",
        "mac": "cmd+shift+0",
        "when": "inWolfContext && !inQuickOpen && !terminalFocus"
      }
    ],
    "menus": {
      "touchBar": [
        {
          "command": "wolf.touchBarStop",
          "when": "inWolfContext"
        },
        {
          "command": "wolf.touchBarStart",
          "when": "editorLangId == python && !inWolfContext"
        }
      ],
      "editor/title": [
        {
          "command": "wolf.stopBarking",
          "when": "inWolfContext",
          "group": "navigation"
        },
        {
          "command": "wolf.barkAtCurrentFile",
          "when": "editorLangId == python && !inWolfContext",
          "group": "navigation"
        }
      ]
    }
  },
  "repository": {
    "url": "https://github.com/Duroktar/Wolf"
  },
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#6495ed"
  },
  "build": {
    "extraResources": "scripts"
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "test-compile": "tsc -p ./",
    "test-server": "ts-node src/client.ts",
    "postinstall": "yarn run copy-files",
    "copy-files": "copyfiles -E -u 1 \"scripts/test.py\" \"out/test/\"",
    "lint": "eslint src --ext ts",
    "pretest": "yarn webpack && yarn run test-compile && yarn run copy-files",
    "test": "node ./out/test/runTest.js",
    "watch": "tsc -watch -p ./",
    "ext:package": "vsce package",
    "ext:publish": "vsce publish"
  },
  "devDependencies": {
    "@types/copy-webpack-plugin": "^6.3.0",
    "@types/glob": "^7.1.3",
    "@types/js-beautify": "^1.13.1",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.27",
    "@types/tmp": "^0.2.0",
    "@types/vscode": "^1.51.0",
    "@types/webpack": "^4.41.25",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "copy-webpack-plugin": "^6.3.2",
    "copyfiles": "^2.4.0",
    "eslint": "^7.13.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "ts-loader": "^8.0.11",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.2",
    "vsce": "^1.81.1",
    "vscode-test": "^1.4.0",
    "webpack": "^5.8.0",
    "webpack-cli": "^4.2.0",
    "ws": "^7.4.0"
  },
  "dependencies": {
    "js-beautify": "^1.7.5",
    "tmp": "0.0.33"
  }
}