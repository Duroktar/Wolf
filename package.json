{
  "name": "wolf",
  "displayName": "Wolf",
  "description": "Python live scratchpad",
  "version": "0.2.2",
  "publisher": "traBpUkciP",
  "license": "Apache-2.0",
  "engines": {
    "vscode": "^1.12.0"
  },
  "categories": ["Debuggers", "Other"],
  "activationEvents": [
    "onCommand:wolf.barkAtCurrentFile",
    "onCommand:wolf.touchBarStart"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Wolf configuration",
      "properties": {
        "wolf.pawPrintsInGutter": {
          "type": "boolean",
          "default": false,
          "description":
            "Use Paw Print style icons in the gutters. (Requires restart)"
        },
        "wolf.hot": {
          "type": "boolean",
          "default": false,
          "description":
            "Updates the file on throttled text input. Makes Wolf feel more \"live\""
        },
        "wolf.hotFrequency": {
          "type": "number",
          "default": 320,
          "description":
            "Updates the file on throttled text input. Makes Wolf feel more \"live\""
        },
        "wolf.disableHotModeWarning": {
          "type": "boolean",
          "default": false,
          "description":
            "Disables the warning upon entering a wolf session in Hot Mode."
        }
      }
    },
    "commands": [
      {
        "command": "wolf.barkAtCurrentFile",
        "category": "wolf",
        "title": "Set the Wolf on the current file.",
        "icon": {
          "light": "./media/wolf-dark-blue.png",
          "dark": "./media/wolf-dark-blue.png"
        }
      },
      {
        "command": "wolf.stopBarking",
        "category": "wolf",
        "title": "Stops all running Wolf sessions.",
        "icon": {
          "light": "./media/wolf-red.png",
          "dark": "./media/wolf-red.png"
        }
      },
      {
        "command": "wolf.touchBarStart",
        "title": "Set the Wolf on the current file.",
        "icon": {
          "light": "./media/wolf-dark-blue-border.png",
          "dark": "./media/wolf-dark-blue-border.png"
        }
      },
      {
        "command": "wolf.touchBarStop",
        "title": "Stops all running Wolf sessions.",
        "icon": {
          "light": "./media/wolf-red-border.png",
          "dark": "./media/wolf-red-border.png"
        }
      }
    ],
    "menus": {
      "touchBar": [
        {
          "command": "wolf.touchBarStop",
          "when": "inWolfContext"
        },
        {
          "command": "wolf.touchBarStart",
          "when": "editorLangId == python && !inWolfContext"
        }
      ],
      "editor/title": [
        {
          "command": "wolf.stopBarking",
          "when": "inWolfContext",
          "group": "navigation"
        },
        {
          "command": "wolf.barkAtCurrentFile",
          "when": "editorLangId == python && !inWolfContext",
          "group": "navigation"
        }
      ]
    }
  },
  "repository": {
    "url": "https://github.com/Duroktar/Wolf"
  },
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#6495ed"
  },
  "build": {
    "extraResources": "scripts"
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test",
    "ext:publish": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.101",
    "electron": "^1.8.2",
    "electron-rebuild": "^1.7.3",
    "mocha": "^2.3.3",
    "typescript": "^2.7.2",
    "vsce": "^1.37.1",
    "vscode": "^1.1.10"
  }
}
